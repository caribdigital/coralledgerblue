<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <script>
        (function () {
            const storageKey = 'coral-theme-mode';
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const parseMode = value => value === 'light' ? 'light' : 'dark';
            const applyMode = mode => document.documentElement.setAttribute('data-theme', mode);
            const getStored = () => {
                const stored = localStorage.getItem(storageKey);
                return stored ? parseMode(stored) : (prefersDark ? 'dark' : 'light');
            };
            window.CoralLedgerThemeManager = {
                getMode: () => getStored(),
                setMode: mode => {
                    const parsed = parseMode(mode);
                    localStorage.setItem(storageKey, parsed);
                    applyMode(parsed);
                },
                applyMode: mode => applyMode(parseMode(mode))
            };
            applyMode(getStored());
        })();
    </script>

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#00bcd4" />
