@page "/map"
@inject IMediator Mediator
@rendermode InteractiveServer

<PageTitle>Bahamas Marine Protected Areas Map - CoralLedger Blue</PageTitle>

<div class="map-page">
    <div class="map-header">
        <h2><i class="bi bi-geo-alt-fill"></i> Bahamas Marine Protected Areas</h2>
        <div class="view-toggle btn-group" role="group">
            <button type="button"
                    class="btn @(_viewMode == ViewMode.Map ? "btn-primary" : "btn-outline-primary")"
                    @onclick="() => _viewMode = ViewMode.Map">
                <i class="bi bi-map"></i> Map View
            </button>
            <button type="button"
                    class="btn @(_viewMode == ViewMode.List ? "btn-primary" : "btn-outline-primary")"
                    @onclick="() => _viewMode = ViewMode.List">
                <i class="bi bi-list-ul"></i> List View
            </button>
        </div>
    </div>

    <div class="map-content">
        @if (_viewMode == ViewMode.Map)
        {
            <div class="row g-0" style="height: calc(100vh - 180px);">
                <div class="col-md-8 col-lg-9" style="height: 100%;">
                    <div class="map-container">
                        <CoralLedger.Web.Client.Components.MpaMapComponent
                            @rendermode="InteractiveWebAssembly"
                            OnMpaSelected="HandleMpaSelected"
                            SelectedMpaId="@_selectedMpaId"
                            ShowLegend="true" />
                    </div>
                </div>
                <div class="col-md-4 col-lg-3" style="height: 100%; overflow-y: auto;">
                    <div class="sidebar-content">
                        @if (_selectedMpaId.HasValue)
                        {
                            <MpaInfoPanel SelectedMpaId="@_selectedMpaId" />
                        }
                        else
                        {
                            <div class="mpa-list-sidebar">
                                <h5 class="mb-3">Select an MPA</h5>
                                @if (_loading)
                                {
                                    <div class="text-center py-4">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                    </div>
                                }
                                else if (_mpas is not null)
                                {
                                    <div class="list-group">
                                        @foreach (var mpa in _mpas)
                                        {
                                            <button type="button"
                                                    class="list-group-item list-group-item-action"
                                                    @onclick="() => SelectMpa(mpa.Id)">
                                                <div class="d-flex w-100 justify-content-between align-items-start">
                                                    <div>
                                                        <h6 class="mb-1">@mpa.Name</h6>
                                                        <small class="text-muted">@mpa.IslandGroup</small>
                                                    </div>
                                                    <span class="badge @GetProtectionBadgeClass(mpa.ProtectionLevel)">
                                                        @GetProtectionLabel(mpa.ProtectionLevel)
                                                    </span>
                                                </div>
                                            </button>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            @* List View - Original Table Layout *@
            <div class="container-fluid py-3">
                <div class="row">
                    <div class="col-md-9">
                        @if (_loading)
                        {
                            <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading MPAs...</span>
                                </div>
                            </div>
                        }
                        else if (_mpas is not null && _mpas.Count > 0)
                        {
                            <div class="card">
                                <div class="card-header bg-primary text-white">
                                    <strong><i class="bi bi-shield-check"></i> @_mpas.Count Marine Protected Areas</strong>
                                </div>
                                <div class="card-body p-0">
                                    <div class="table-responsive" style="max-height: 60vh; overflow-y: auto;">
                                        <table class="table table-striped table-hover mb-0">
                                            <thead class="sticky-top bg-light">
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Island Group</th>
                                                    <th>Protection Level</th>
                                                    <th>Area (km²)</th>
                                                    <th>Coordinates</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var mpa in _mpas)
                                                {
                                                    <tr class="@(_selectedMpaId == mpa.Id ? "table-primary" : "")"
                                                        style="cursor: pointer;"
                                                        @onclick="() => SelectMpa(mpa.Id)">
                                                        <td><strong>@mpa.Name</strong></td>
                                                        <td>@mpa.IslandGroup</td>
                                                        <td>
                                                            <span class="badge @GetProtectionBadgeClass(mpa.ProtectionLevel)">
                                                                @mpa.ProtectionLevel
                                                            </span>
                                                        </td>
                                                        <td>@mpa.AreaSquareKm.ToString("N1")</td>
                                                        <td class="text-muted small">
                                                            @mpa.CentroidLatitude.ToString("F4")°N, @Math.Abs(mpa.CentroidLongitude).ToString("F4")°W
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle"></i> No Marine Protected Areas found. The database may need to be seeded.
                            </div>
                        }
                    </div>
                    <div class="col-md-3">
                        <MpaInfoPanel SelectedMpaId="@_selectedMpaId" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .map-page {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .map-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
        color: white;
    }

    .map-header h2 {
        margin: 0;
        font-size: 1.5rem;
    }

    .map-header h2 i {
        margin-right: 0.5rem;
    }

    .map-container {
        height: 100%;
        background: #e9ecef;
        border-right: 1px solid #dee2e6;
    }

    .sidebar-content {
        padding: 1rem;
        background: #f8f9fa;
        height: 100%;
    }

    .mpa-list-sidebar .list-group-item {
        border-radius: 0;
        border-left: 3px solid transparent;
        transition: all 0.2s ease;
    }

    .mpa-list-sidebar .list-group-item:hover {
        border-left-color: #0d6efd;
        background-color: #e7f1ff;
    }

    .mpa-list-sidebar .list-group-item h6 {
        font-size: 0.9rem;
        font-weight: 600;
    }

    .view-toggle .btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .view-toggle .btn i {
        font-size: 1rem;
    }
</style>

@code {
    private IReadOnlyList<MpaSummaryDto>? _mpas;
    private bool _loading = true;
    private Guid? _selectedMpaId;
    private ViewMode _viewMode = ViewMode.Map;

    private enum ViewMode { Map, List }

    protected override async Task OnInitializedAsync()
    {
        _mpas = await Mediator.Send(new GetAllMpasQuery());
        _loading = false;
    }

    private void SelectMpa(Guid mpaId)
    {
        _selectedMpaId = _selectedMpaId == mpaId ? null : mpaId;
    }

    private void HandleMpaSelected(Guid mpaId)
    {
        _selectedMpaId = mpaId;
        StateHasChanged();
    }

    private string GetProtectionBadgeClass(string level) => level switch
    {
        "NoTake" => "bg-danger",
        "HighlyProtected" => "bg-warning text-dark",
        "LightlyProtected" => "bg-info",
        _ => "bg-secondary"
    };

    private string GetProtectionLabel(string level) => level switch
    {
        "NoTake" => "No-Take",
        "HighlyProtected" => "High",
        "LightlyProtected" => "Light",
        _ => level
    };
}
