@code {
    private IReadOnlyList<MpaSummaryDto>? _mpas;
    private bool _loading = true;
    private bool _bleachingError = false;
    private int _mpaCount = 0;
    private double _totalArea = 0;
    private double? _maxDhw;
    private double? _avgSst;
    private int? _maxAlertLevel;
    private bool _isRefreshing = false;
    private DateTime _lastBleachingUpdate = DateTime.MinValue;
    
    // Filter state
    private string _searchTerm = "";
    private string _protectionFilter = "";
    
    private IEnumerable<MpaSummaryDto> _filteredMpas => 
        _mpas?.Where(mpa => 
        {
            // Search filter
            if (!string.IsNullOrWhiteSpace(_searchTerm) && 
                !mpa.Name.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase) &&
                !mpa.IslandGroup.Contains(_searchTerm, StringComparison.OrdinalIgnoreCase))
                return false;
            
            // Protection level filter
            if (!string.IsNullOrWhiteSpace(_protectionFilter) && 
                !mpa.ProtectionLevel.Equals(_protectionFilter, StringComparison.OrdinalIgnoreCase))
                return false;
            
            return true;
        })
        .OrderByDescending(m => m.AreaSquareKm) ?? Enumerable.Empty<MpaSummaryDto>();

    protected override async Task OnInitializedAsync()
    {
        // Read filter state from URL query parameters
        var uri = new Uri(NavigationManager.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        _searchTerm = query["search"] ?? "";
        _protectionFilter = query["protection"] ?? "";

        // Load MPA data
        _mpas = await Mediator.Send(new GetAllMpasQuery());
        _mpaCount = _mpas?.Count ?? 0;
        _totalArea = _mpas?.Sum(m => m.AreaSquareKm) ?? 0;
        _loading = false;

        // Load bleaching data asynchronously
        await LoadBleachingDataAsync();
    }
    
    private void ApplyFilters()
    {
        // Update URL with filter state for shareable links
        var queryParams = new List<string>();
        if (!string.IsNullOrWhiteSpace(_searchTerm))
            queryParams.Add($"search={Uri.EscapeDataString(_searchTerm)}");
        if (!string.IsNullOrWhiteSpace(_protectionFilter))
            queryParams.Add($"protection={Uri.EscapeDataString(_protectionFilter)}");

        var newUrl = queryParams.Count > 0
            ? $"/dashboard?{string.Join("&", queryParams)}"
            : "/dashboard";

        NavigationManager.NavigateTo(newUrl, forceLoad: false, replace: true);

        // Triggers re-render with filtered data
        StateHasChanged();
    }
    
    private async Task RefreshDataAsync()
    {
        if (_isRefreshing) return;
        
        _isRefreshing = true;
        StateHasChanged();
        
        try
        {
            await LoadBleachingDataAsync();
        }
        finally
        {
            _isRefreshing = false;
            StateHasChanged();
        }
    }

    private async Task LoadBleachingDataAsync()
    {
        try
        {
            var yesterday = DateOnly.FromDateTime(DateTime.UtcNow.AddDays(-1));
            var result = await CrwClient.GetBleachingDataAsync(-76.5, 24.2, yesterday);

            if (result.Success && result.Value is not null)
            {
                _maxDhw = result.Value.DegreeHeatingWeek;
                _avgSst = result.Value.SeaSurfaceTemperature;
                _maxAlertLevel = result.Value.AlertLevel;
                _bleachingError = false;
                _lastBleachingUpdate = DateTime.UtcNow;
                StateHasChanged();
            }
            else if (!result.Success)
            {
                _bleachingError = true;
                Console.WriteLine($"Error loading bleaching data: {result.ErrorMessage}");
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            _bleachingError = true;
            Console.WriteLine($"Error loading bleaching data: {ex.Message}");
            StateHasChanged();
        }
    }

    private async Task RetryBleachingDataAsync()
    {
        _bleachingError = false;
        StateHasChanged();
        await LoadBleachingDataAsync();
    }

    private string GetBleachingAlertText()
    {
        if (!_maxAlertLevel.HasValue) return Localizer["Bleaching_Loading"];

        return _maxAlertLevel.Value switch
        {
            0 => Localizer["Alert_NoStress"],
            1 => Localizer["Alert_Watch"],
            2 => Localizer["Alert_Warning"],
            3 => Localizer["Alert_Alert1"],
            4 => Localizer["Alert_Alert2"],
            >= 5 => string.Format(Localizer["Alert_Level"], _maxAlertLevel.Value - 2),
            _ => "Unknown"
        };
    }

    private DataCard.Status GetBleachingStatus()
    {
        if (!_maxAlertLevel.HasValue) return DataCard.Status.Default;

        return _maxAlertLevel.Value switch
        {
            0 => DataCard.Status.Success,
            1 or 2 => DataCard.Status.Warning,
            >= 3 => DataCard.Status.Error,
            _ => DataCard.Status.Default
        };
    }

    private DataCard.Status GetSstStatus()
    {
        if (!_avgSst.HasValue) return DataCard.Status.Default;
        // Normal Bahamas SST is around 26-28°C
        if (_avgSst.Value > 29) return DataCard.Status.Warning;
        if (_avgSst.Value > 30) return DataCard.Status.Error;
        return DataCard.Status.Success;
    }

    private DataCard.Trend GetSstTrend()
    {
        if (!_avgSst.HasValue) return DataCard.Trend.Stable;
        // Assuming 27°C is baseline
        return _avgSst.Value > 27.5 ? DataCard.Trend.Up : DataCard.Trend.Stable;
    }

    private string GetSstTrendText()
    {
        if (!_avgSst.HasValue) return "";
        var diff = _avgSst.Value - 27.0; // Baseline
        return diff > 0 ? $"+{diff:F1}°" : $"{diff:F1}°";
    }

    private DataCard.Trend GetDhwTrend()
    {
        if (!_maxDhw.HasValue) return DataCard.Trend.Stable;
        return _maxDhw.Value > 4 ? DataCard.Trend.Up : DataCard.Trend.Stable;
    }

    private void NavigateToMpa(Guid mpaId)
    {
        NavigationManager.NavigateTo($"/map?mpa={mpaId}");
    }

    private void HandleRowKeyPress(KeyboardEventArgs e, Guid mpaId)
    {
        if (e.Key == "Enter" || e.Key == " ")
        {
            NavigateToMpa(mpaId);
        }
    }

