@page "/dashboard"
@page "/"
@inject IMediator Mediator
@inject ICoralReefWatchClient CrwClient
@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResources> Localizer
@rendermode InteractiveServer

<PageTitle>@Localizer["Nav_Dashboard"] - CoralLedger Blue</PageTitle>

<div class="dashboard-page">
    @* US-2.1.1: Enhanced Dashboard Header *@
    <header class="dashboard-header" role="banner">
        <div class="header-content">
            <div class="header-title">
                <h1>
                    <i class="bi bi-speedometer2" aria-hidden="true"></i>
                    @Localizer["Dashboard_Title"]
                </h1>
                <p class="header-subtitle">@Localizer["Dashboard_Subtitle"]</p>
            </div>
            <div class="header-actions">
                <a href="/map" class="btn-header" aria-label="@Localizer["Dashboard_ViewFullMap"]">
                    <i class="bi bi-map"></i>
                    <span>@Localizer["Dashboard_ViewFullMap"]</span>
                </a>
            </div>
        </div>
    </header>

    <main class="dashboard-content" role="main">
        @* US-2.1.2: KPI Cards Row using DataCard component *@
        <section class="kpi-row" aria-label="Key performance indicators">
            <DataCard
                Icon="bi-shield-check"
                Label="@Localizer["Dashboard_ProtectedAreas"]"
                Value="@_mpaCount.ToString()"
                Unit="@Localizer["Dashboard_MPAs"]"
                TrendDirection="DataCard.Trend.Stable"
                ShowTrend="false"
                CardStatus="DataCard.Status.Success"
                Loading="@_loading"
                AdditionalCssClass="stagger-1" />

            <DataCard
                Icon="bi-geo-alt-fill"
                Label="@Localizer["Dashboard_TotalProtected"]"
                Value="@_totalArea.ToString("N0")"
                Unit="km²"
                TrendLabel="@Localizer["Dashboard_OfBahamianWaters"]"
                TrendDirection="DataCard.Trend.Stable"
                ShowTrend="true"
                CardStatus="DataCard.Status.Success"
                Loading="@_loading"
                AdditionalCssClass="stagger-2" />

            <DataCard
                Icon="bi-thermometer-half"
                Label="@Localizer["Dashboard_SeaTemperature"]"
                Value="@(_avgSst?.ToString("F1") ?? "--")"
                Unit="°C"
                TrendValue="@GetSstTrendText()"
                TrendLabel="@Localizer["Dashboard_FromNormal"]"
                TrendDirection="@GetSstTrend()"
                CardStatus="@GetSstStatus()"
                Loading="@(!_avgSst.HasValue && !_bleachingError)"
                AdditionalCssClass="stagger-3" />

            <DataCard
                Icon="bi-exclamation-triangle"
                Label="@Localizer["Dashboard_BleachingAlert"]"
                Value="@GetBleachingAlertText()"
                TrendValue="@($"DHW: {(_maxDhw?.ToString("F1") ?? "--")}°C-wks")"
                TrendDirection="@GetDhwTrend()"
                CardStatus="@GetBleachingStatus()"
                Loading="@(!_maxAlertLevel.HasValue && !_bleachingError)"
                HasError="@_bleachingError"
                ErrorMessage="@Localizer["Dashboard_UnableToLoadBleachingData"]"
                AdditionalCssClass="stagger-4">
                @if (_maxAlertLevel.HasValue)
                {
                    <AlertBadge Level="@_maxAlertLevel.Value" Size="AlertBadge.BadgeSize.Small" />
                }
                else if (_bleachingError)
                {
                    <button class="btn-retry" @onclick="RetryBleachingDataAsync" aria-label="Retry loading bleaching data">
                        <i class="bi bi-arrow-clockwise"></i> Try Again
                    </button>
                }
            </DataCard>
        </section>

        @* Main Content Grid *@
        <div class="dashboard-grid">
            @* US-2.1.1: Map Preview Card - Lazy loaded for performance *@
            <section class="card-map-preview" aria-label="Map preview">
                <div class="card-header">
                    <h2><i class="bi bi-map" aria-hidden="true"></i> @Localizer["Dashboard_MapPreview"]</h2>
                    <a href="/map" class="btn-card-action">
                        @Localizer["Dashboard_ExpandMap"] <i class="bi bi-arrows-fullscreen"></i>
                    </a>
                </div>
                <div class="card-body map-preview-body">
                    <LazyMapLoader Height="350px" PlaceholderText="Bahamas Marine Map" RootMargin="200">
                        <LeafletMapComponent
                            ShowLegend="false"
                            ShowFishingEvents="false"
                            UseDarkTheme="true" />
                    </LazyMapLoader>
                </div>
            </section>

            @* US-2.1.3: Alert List (placeholder for future alerts) *@
            <section class="card-alerts" aria-label="Recent alerts">
                <div class="card-header">
                    <h2><i class="bi bi-bell" aria-hidden="true"></i> @Localizer["Alert_RecentAlerts"]</h2>
                </div>
                <div class="card-body">
                    @if (_maxAlertLevel.HasValue && _maxAlertLevel.Value >= 2)
                    {
                        <div class="alert-list">
                            <div class="alert-item alert-@(_maxAlertLevel >= 3 ? "danger" : "warning")">
                                <div class="alert-icon">
                                    <i class="bi bi-thermometer-high"></i>
                                </div>
                                <div class="alert-content">
                                    <strong>@GetBleachingAlertText()</strong>
                                    <span>@Localizer["Alert_HeatStressDetected"]</span>
                                    <small>DHW: @(_maxDhw?.ToString("F1") ?? "N/A")°C-weeks</small>
                                </div>
                                <AlertBadge Level="@_maxAlertLevel.Value" Size="AlertBadge.BadgeSize.Small" />
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-check-circle"></i>
                            <span>@Localizer["Alert_NoAlerts"]</span>
                            <small>@Localizer["Alert_AllSystemsNormal"]</small>
                        </div>
                    }
                </div>
            </section>

            @* MPA Summary Table *@
            <section class="card-mpa-table" aria-label="Marine Protected Areas summary">
                <div class="card-header">
                    <h2><i class="bi bi-table" aria-hidden="true"></i> @Localizer["Dashboard_MarineProtectedAreas"]</h2>
                    <span class="badge-count">@_filteredMpas.Count() / @_mpaCount MPAs</span>
                </div>
                
                @* Filter Bar *@
                <div class="filter-bar">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="search"
                               placeholder="@Localizer["Dashboard_SearchMPAs"]"
                               @bind="_searchTerm"
                               @bind:event="oninput"
                               @bind:after="ApplyFilters"
                               aria-label="@Localizer["Dashboard_SearchMPAs"]" />
                    </div>

                    <select @bind="_protectionFilter"
                            @bind:after="ApplyFilters"
                            class="filter-select"
                            aria-label="Filter by protection level">
                        <option value="">@Localizer["Dashboard_AllProtectionLevels"]</option>
                        <option value="NoTake">@Localizer["Protection_NoTake"]</option>
                        <option value="HighlyProtected">@Localizer["Protection_HighlyProtected"]</option>
                        <option value="LightlyProtected">@Localizer["Protection_LightlyProtected"]</option>
                    </select>
                </div>
                
                <div class="card-body table-body">
                    @if (_loading)
                    {
                        <div class="loading-state" aria-busy="true" aria-live="polite">
                            @* Skeleton loading for table *@
                            <div class="table-responsive">
                                <table class="data-table">
                                    <thead>
                                        <tr>
                                            <th scope="col">@Localizer["Dashboard_Name"]</th>
                                            <th scope="col">@Localizer["Dashboard_IslandGroup"]</th>
                                            <th scope="col">@Localizer["Dashboard_Protection"]</th>
                                            <th scope="col" class="text-end">@Localizer["Dashboard_Area"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < 5; i++)
                                        {
                                            <tr class="skeleton-table-row">
                                                <td><div class="skeleton-line" style="width: 70%;"></div></td>
                                                <td><div class="skeleton-line" style="width: 60%;"></div></td>
                                                <td><div class="skeleton-line" style="width: 50%;"></div></td>
                                                <td class="text-end"><div class="skeleton-line" style="width: 40%; margin-left: auto;"></div></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <span class="visually-hidden">Loading Marine Protected Areas...</span>
                        </div>
                    }
                    else if (_mpas is not null)
                    {
                        <div class="table-responsive">
                            <table class="data-table" role="grid">
                                <thead>
                                    <tr>
                                        <th scope="col">@Localizer["Dashboard_Name"]</th>
                                        <th scope="col">@Localizer["Dashboard_IslandGroup"]</th>
                                        <th scope="col">@Localizer["Dashboard_Protection"]</th>
                                        <th scope="col" class="text-end">@Localizer["Dashboard_Area"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var (mpa, index) in _filteredMpas.Select((m, i) => (m, i)))
                                    {
                                        var staggerClass = $"table-row-animate stagger-{Math.Min(index + 1, 8)}";
                                        <tr @onclick="() => NavigateToMpa(mpa.Id)"
                                            class="@staggerClass"
                                            style="cursor: pointer;"
                                            tabindex="0"
                                            role="row"
                                            @onkeypress="(e) => HandleRowKeyPress(e, mpa.Id)">
                                            <td><strong>@mpa.Name</strong></td>
                                            <td>@mpa.IslandGroup</td>
                                            <td>
                                                <span class="protection-badge @GetProtectionClass(mpa.ProtectionLevel)"
                                                      role="status"
                                                      aria-label="@GetProtectionAriaLabel(mpa.ProtectionLevel)">
                                                    <i class="bi @GetProtectionIcon(mpa.ProtectionLevel)" aria-hidden="true"></i>
                                                    @GetProtectionLabel(mpa.ProtectionLevel)
                                                </span>
                                            </td>
                                            <td class="text-end font-mono">@mpa.AreaSquareKm.ToString("N1") km²</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </section>

            @* Data Sources Panel *@
            <section class="card-data-sources" aria-label="Data sources">
                <div class="card-header">
                    <h2><i class="bi bi-database" aria-hidden="true"></i> @Localizer["Dashboard_DataSources"]</h2>
                    <button class="btn-refresh" 
                            @onclick="RefreshDataAsync" 
                            disabled="@_isRefreshing"
                            aria-label="Refresh data">
                        <i class="bi bi-arrow-clockwise @(_isRefreshing ? "spin" : "")"></i>
                    </button>
                </div>
                <div class="card-body">
                    <DataFreshnessIndicator DataSource="NOAA Coral Reef Watch" LastUpdated="@_lastBleachingUpdate" StalenessThreshold="@TimeSpan.FromHours(2)" />
                    <DataFreshnessIndicator DataSource="Global Fishing Watch" LastUpdated="@DateTime.UtcNow.AddMinutes(-15)" StalenessThreshold="@TimeSpan.FromHours(2)" />
                    <DataFreshnessIndicator DataSource="Protected Planet (WDPA)" LastUpdated="@DateTime.UtcNow.AddMinutes(-30)" StalenessThreshold="@TimeSpan.FromDays(30)" />
                </div>
            </section>
        </div>

        @* Attribution Footer *@
        <footer class="dashboard-footer" role="contentinfo">
            <p>
                Data provided by
                <a href="https://coralreefwatch.noaa.gov" target="_blank" rel="noopener">NOAA Coral Reef Watch</a>,
                <a href="https://globalfishingwatch.org" target="_blank" rel="noopener">Global Fishing Watch</a>,
                and <a href="https://www.protectedplanet.net" target="_blank" rel="noopener">Protected Planet</a>
            </p>
            <p>
                Built with love for the Bahamas Blue Economy |
                <a href="https://digitalcarib.com" target="_blank" rel="noopener">DigitalCarib.com</a>
            </p>
        </footer>
    </main>
</div>

<style>
    /* US-2.1.1: Dashboard Layout - Dark Theme */
    .dashboard-page {
        background: var(--color-surface, #050C1A);
        min-height: 100vh;
        color: var(--color-text, #F5FBFF);
    }

    /* Header */
    .dashboard-header {
        background: var(--gradient-primary, linear-gradient(135deg, #2EE3FF, #20B7CC 60%, #03506F));
        padding: 1.5rem 2rem;
    }

    .header-content {
        max-width: var(--content-max-width, 1280px);
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .header-title h1 {
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0;
        color: var(--color-surface, #050C1A);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .header-subtitle {
        margin: 0.25rem 0 0;
        font-size: 0.875rem;
        opacity: 0.8;
        color: var(--color-surface, #050C1A);
    }

    .btn-header {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: #ffffff;
        color: #0d6efd;
        border: 2px solid #ffffff;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.875rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.25);
        transition: all 0.2s ease;
    }

    .btn-header:hover {
        background: #f8f9fa;
        color: #0056b3;
        border-color: #f8f9fa;
    }

    /* Main Content */
    .dashboard-content {
        max-width: var(--content-max-width, 1280px);
        margin: 0 auto;
        padding: 1.5rem;
    }

    /* KPI Row */
    .kpi-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    /* Dashboard Grid */
    .dashboard-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: auto auto;
        gap: 1.5rem;
    }

    .card-map-preview {
        grid-column: 1;
        grid-row: 1 / 3;
    }

    .card-alerts {
        grid-column: 2;
        grid-row: 1;
    }

    .card-mpa-table {
        grid-column: 1 / -1;
        grid-row: 3;
    }

    .card-data-sources {
        grid-column: 2;
        grid-row: 2;
    }

    /* Mobile: Single column layout */
    @@media (max-width: 576px) {
        .dashboard-content {
            padding: 1rem;
        }

        .kpi-row {
            grid-template-columns: 1fr;
            gap: 0.75rem;
            margin-bottom: 1rem;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .card-map-preview,
        .card-alerts,
        .card-mpa-table,
        .card-data-sources {
            grid-column: 1;
            grid-row: auto;
        }

        .dashboard-header {
            padding: 1rem;
        }

        .header-content {
            flex-direction: column;
            gap: 1rem;
        }

        .header-actions {
            width: 100%;
        }

        .btn-header {
            width: 100%;
            justify-content: center;
        }
    }

    /* Tablet Portrait: 2 column layout for KPIs */
    @@media (min-width: 577px) and (max-width: 768px) {
        .dashboard-content {
            padding: 1.25rem;
        }

        .kpi-row {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
            gap: 1.25rem;
        }

        .card-map-preview,
        .card-alerts,
        .card-mpa-table,
        .card-data-sources {
            grid-column: 1;
            grid-row: auto;
        }
    }

    /* Tablet Landscape: 2 column layout for dashboard grid */
    @@media (min-width: 769px) and (max-width: 991px) {
        .kpi-row {
            grid-template-columns: repeat(2, 1fr);
        }

        .dashboard-grid {
            grid-template-columns: 1fr;
        }

        .card-map-preview,
        .card-alerts,
        .card-mpa-table,
        .card-data-sources {
            grid-column: 1;
            grid-row: auto;
        }
    }

    /* Large Desktop: Ensure 4-column layout for KPIs */
    @@media (min-width: 992px) {
        .kpi-row {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    /* Card Styles */
    .card-map-preview,
    .card-alerts,
    .card-mpa-table,
    .card-data-sources {
        background: var(--color-surface-alt, #0C1B33);
        border-radius: var(--radius-base, 14px);
        border: 1px solid var(--color-border, rgba(255,255,255,0.18));
        overflow: hidden;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--color-border, rgba(255,255,255,0.18));
    }

    .card-header h2 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text, #F5FBFF);
    }

    .card-header h2 i {
        color: var(--color-primary, #2EE3FF);
    }

    .card-body {
        padding: 1rem 1.25rem;
    }

    .btn-card-action {
        font-size: 0.75rem;
        color: var(--color-primary, #2EE3FF);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .btn-card-action:hover {
        text-decoration: underline;
    }

    .badge-count {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        background: var(--color-surface, #050C1A);
        border-radius: 4px;
        color: var(--color-text-muted);
    }

    /* Filter Bar */
    .filter-bar {
        display: flex;
        gap: 0.75rem;
        padding: 0.75rem 1.25rem;
        border-bottom: 1px solid var(--color-border, rgba(255,255,255,0.18));
        flex-wrap: wrap;
    }

    .search-box {
        position: relative;
        flex: 1;
        min-width: 200px;
    }

    .search-box i {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--color-text-muted);
        pointer-events: none;
    }

    .search-box input {
        width: 100%;
        padding: 0.5rem 0.75rem 0.5rem 2.25rem;
        background: var(--color-surface, #050C1A);
        border: 1px solid var(--color-border, rgba(255,255,255,0.18));
        border-radius: 6px;
        color: var(--color-text, #F5FBFF);
        font-size: 0.875rem;
    }

    .search-box input:focus {
        outline: none;
        border-color: var(--color-primary, #2EE3FF);
        box-shadow: 0 0 0 3px rgba(46, 227, 255, 0.1);
    }

    .filter-select {
        padding: 0.5rem 0.75rem;
        background: var(--color-surface, #050C1A);
        border: 1px solid var(--color-border, rgba(255,255,255,0.18));
        border-radius: 6px;
        color: var(--color-text, #F5FBFF);
        font-size: 0.875rem;
        cursor: pointer;
    }

    .filter-select:focus {
        outline: none;
        border-color: var(--color-primary, #2EE3FF);
        box-shadow: 0 0 0 3px rgba(46, 227, 255, 0.1);
    }

    /* Refresh Button */
    .btn-refresh {
        background: transparent;
        border: none;
        color: var(--color-primary, #2EE3FF);
        cursor: pointer;
        padding: 0.25rem;
        font-size: 1.25rem;
        transition: transform 0.2s ease;
    }

    .btn-refresh:hover:not(:disabled) {
        transform: scale(1.1);
    }

    .btn-refresh:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .btn-refresh i.spin {
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    /* Map Preview */
    .map-preview-body {
        padding: 0;
        height: 350px;
    }

    .map-preview-body :deep(.leaflet-map-container) {
        height: 100% !important;
        min-height: unset !important;
    }

    /* Alert List */
    .alert-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .alert-item {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.75rem;
        border-radius: 8px;
        background: rgba(247, 197, 73, 0.1);
        border: 1px solid rgba(247, 197, 73, 0.2);
    }

    .alert-item.alert-danger {
        background: rgba(251, 122, 106, 0.1);
        border-color: rgba(251, 122, 106, 0.2);
    }

    .alert-icon {
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--color-warning, #F7C549);
        color: var(--color-surface);
        border-radius: 8px;
        flex-shrink: 0;
    }

    .alert-item.alert-danger .alert-icon {
        background: var(--color-error, #FB7A6A);
    }

    .alert-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
    }

    .alert-content strong {
        font-size: 0.875rem;
    }

    .alert-content span {
        font-size: 0.8125rem;
        color: var(--color-text-muted);
    }

    .alert-content small {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        font-family: 'JetBrains Mono', monospace;
    }

    /* Empty State */
    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        color: var(--color-text-muted);
        text-align: center;
    }

    .empty-state i {
        font-size: 2rem;
        color: var(--color-success, #5DE285);
        margin-bottom: 0.5rem;
    }

    .empty-state span {
        font-weight: 500;
    }

    .empty-state small {
        font-size: 0.75rem;
    }

    /* Table */
    .table-body {
        padding: 0;
        max-height: 300px;
        overflow-y: auto;
    }

    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

    .data-table thead {
        position: sticky;
        top: 0;
        background: var(--color-surface-alt, #0C1B33);
        z-index: 1;
    }

    .data-table th {
        padding: 0.75rem 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-text-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-align: left;
        border-bottom: 1px solid var(--color-border);
    }

    .data-table td {
        padding: 0.75rem 1rem;
        font-size: 0.875rem;
        border-bottom: 1px solid var(--color-border);
    }

    .data-table tbody tr:hover {
        background: rgba(46, 227, 255, 0.05);
    }

    .data-table tbody tr:focus {
        outline: 2px solid var(--focus-ring, #58A6FF);
        outline-offset: -2px;
    }

    .font-mono {
        font-family: 'JetBrains Mono', monospace;
    }

    .protection-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .protection-badge.protection-notake {
        background: rgba(220, 53, 69, 0.2);
        color: #dc3545;
    }

    .protection-badge.protection-high {
