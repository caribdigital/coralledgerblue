@page "/account/2fa/setup"
@attribute [Authorize]
@using System.ComponentModel.DataAnnotations
@using System.Net.Http.Json
@using System.Net.Http.Headers
@using Microsoft.AspNetCore.Authorization
@using QRCoder
@using CoralLedger.Blue.Web.Endpoints.Auth
@inject NavigationManager NavigationManager
@inject IHttpClientFactory HttpClientFactory
@inject IStringLocalizer<SharedResources> Localizer
@rendermode InteractiveServer

<PageTitle>@Localizer["TwoFactor_Setup_Title"] - CoralLedger Blue</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card two-factor-setup-card">
            <div class="auth-header">
                <h1>
                    <i class="bi bi-shield-lock"></i>
                    @Localizer["TwoFactor_Setup_Title"]
                </h1>
            </div>

            <!-- Progress Steps -->
            <div class="setup-steps">
                <div class="step @(_currentStep >= 1 ? "active" : "") @(_currentStep > 1 ? "completed" : "")">
                    <span class="step-number">1</span>
                    <span class="step-label">@Localizer["TwoFactor_Setup_Step1"]</span>
                </div>
                <div class="step-connector"></div>
                <div class="step @(_currentStep >= 2 ? "active" : "") @(_currentStep > 2 ? "completed" : "")">
                    <span class="step-number">2</span>
                    <span class="step-label">@Localizer["TwoFactor_Setup_Step2"]</span>
                </div>
                <div class="step-connector"></div>
                <div class="step @(_currentStep >= 3 ? "active" : "")">
                    <span class="step-number">3</span>
                    <span class="step-label">@Localizer["TwoFactor_Setup_Step3"]</span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @_errorMessage
                </div>
            }

            @if (_isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">@Localizer["TwoFactor_Setup_Loading"]</p>
                </div>
            }
            else
            {
                @switch (_currentStep)
                {
                    case 1:
                        <div class="setup-step-content">
                            <p class="step-description">@Localizer["TwoFactor_Setup_Step1_Description"]</p>

                            <div class="qr-code-container">
                                @if (!string.IsNullOrEmpty(_qrCodeDataUrl))
                                {
                                    <img src="@_qrCodeDataUrl" alt="QR Code for authenticator app" />
                                }
                            </div>

                            <div class="manual-key-section">
                                <p class="text-muted small">@Localizer["TwoFactor_Setup_ManualEntry"]</p>
                                <div class="manual-key">
                                    <code>@_secretKey</code>
                                    <button type="button" class="btn btn-sm btn-outline-secondary copy-btn"
                                            @onclick="CopySecretKey" title="Copy to clipboard">
                                        <i class="bi bi-clipboard"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="button" class="btn btn-primary btn-block" @onclick="GoToStep2">
                                    <span>@Localizer["TwoFactor_Setup_Next"]</span>
                                    <i class="bi bi-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                        break;

                    case 2:
                        <div class="setup-step-content">
                            <p class="step-description">@Localizer["TwoFactor_Setup_Step2_Description"]</p>

                            <EditForm Model="@_verifyModel" OnValidSubmit="@HandleVerify" FormName="2fa-verify-form">
                                <DataAnnotationsValidator />

                                <div class="form-group">
                                    <label for="code">@Localizer["TwoFactor_Setup_EnterCode"]</label>
                                    <div class="code-input-wrapper">
                                        <InputText id="code" class="form-control code-input" @bind-Value="_verifyModel.Code"
                                                   placeholder="000000" maxlength="6" autocomplete="one-time-code" />
                                    </div>
                                    <ValidationMessage For="@(() => _verifyModel.Code)" />
                                </div>

                                <div class="form-actions">
                                    <button type="button" class="btn btn-outline-secondary" @onclick="GoToStep1">
                                        <i class="bi bi-arrow-left"></i>
                                        <span>@Localizer["TwoFactor_Setup_Back"]</span>
                                    </button>
                                    <button type="submit" class="btn btn-primary" disabled="@_isVerifying">
                                        @if (_isVerifying)
                                        {
                                            <span class="spinner-border spinner-border-sm" role="status"></span>
                                            <span>@Localizer["TwoFactor_Setup_Verifying"]...</span>
                                        }
                                        else
                                        {
                                            <span>@Localizer["TwoFactor_Setup_VerifyAndEnable"]</span>
                                            <i class="bi bi-check-lg"></i>
                                        }
                                    </button>
                                </div>
                            </EditForm>
                        </div>
                        break;

                    case 3:
                        <div class="setup-step-content">
                            <div class="alert alert-success">
                                <i class="bi bi-check-circle-fill"></i>
                                @Localizer["TwoFactor_Setup_Success"]
                            </div>

                            <p class="step-description">@Localizer["TwoFactor_Setup_Step3_Description"]</p>

                            <div class="recovery-codes-container">
                                <div class="recovery-codes">
                                    @foreach (var recoveryCode in _recoveryCodes)
                                    {
                                        <code>@recoveryCode</code>
                                    }
                                </div>
                            </div>

                            <div class="alert alert-warning mt-3">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                @Localizer["TwoFactor_Setup_RecoveryWarning"]
                            </div>

                            <div class="form-actions">
                                <button type="button" class="btn btn-outline-secondary" @onclick="DownloadRecoveryCodes">
                                    <i class="bi bi-download"></i>
                                    <span>@Localizer["TwoFactor_Setup_Download"]</span>
                                </button>
                                <button type="button" class="btn btn-primary" @onclick="FinishSetup">
                                    <i class="bi bi-check-lg"></i>
                                    <span>@Localizer["TwoFactor_Setup_Done"]</span>
                                </button>
                            </div>
                        </div>
                        break;
                }
            }

            <div class="auth-footer">
                <p>
                    <a href="/account/settings">
                        <i class="bi bi-arrow-left"></i>
                        @Localizer["TwoFactor_Setup_BackToSettings"]
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private int _currentStep = 1;
    private bool _isLoading = true;
    private bool _isVerifying = false;
    private string? _errorMessage;
    private string? _secretKey;
    private string? _qrCodeUri;
    private string? _qrCodeDataUrl;
    private string[] _recoveryCodes = Array.Empty<string>();
    private VerifyModel _verifyModel = new();

    protected override async Task OnInitializedAsync()
    {
        await SetupTwoFactorAsync();
    }

    private async Task SetupTwoFactorAsync()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress = new Uri(NavigationManager.BaseUri);

            var response = await httpClient.PostAsync("/api/auth/2fa/setup", null);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<TwoFactorSetupResponse>();
                if (result != null)
                {
                    _secretKey = result.SecretKey;
                    _qrCodeUri = result.QrCodeUri;
                    GenerateQrCode();
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.BadRequest)
            {
                var problemDetails = await response.Content.ReadFromJsonAsync<Microsoft.AspNetCore.Mvc.ProblemDetails>();
                if (problemDetails?.Detail?.Contains("already enabled", StringComparison.OrdinalIgnoreCase) == true)
                {
                    NavigationManager.NavigateTo("/account/settings");
                    return;
                }
                _errorMessage = problemDetails?.Detail ?? "Failed to setup 2FA.";
            }
            else
            {
                _errorMessage = "Failed to setup 2FA. Please try again.";
            }
        }
        catch (Exception)
        {
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void GenerateQrCode()
    {
        if (string.IsNullOrEmpty(_qrCodeUri)) return;

        try
        {
            using var qrGenerator = new QRCodeGenerator();
            using var qrCodeData = qrGenerator.CreateQrCode(_qrCodeUri, QRCodeGenerator.ECCLevel.Q);
            using var qrCode = new PngByteQRCode(qrCodeData);
            var qrCodeBytes = qrCode.GetGraphic(10);
            _qrCodeDataUrl = $"data:image/png;base64,{Convert.ToBase64String(qrCodeBytes)}";
        }
        catch
        {
            _errorMessage = "Failed to generate QR code.";
        }
    }

    private async Task CopySecretKey()
    {
        // This would require JS interop - for now just show a message
        // In production, add JS interop for clipboard
    }

    private void GoToStep1() => _currentStep = 1;
    private void GoToStep2() => _currentStep = 2;

    private async Task HandleVerify()
    {
        if (string.IsNullOrEmpty(_secretKey))
        {
            _errorMessage = "Setup not initialized. Please refresh and try again.";
            return;
        }

        _isVerifying = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress = new Uri(NavigationManager.BaseUri);

            var request = new Enable2FARequest(_secretKey, _verifyModel.Code);
            var response = await httpClient.PostAsJsonAsync("/api/auth/2fa/enable", request);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<Enable2FAResponse>();
                if (result != null)
                {
                    _recoveryCodes = result.RecoveryCodes;
                    _currentStep = 3;
                }
            }
            else
            {
                var problemDetails = await response.Content.ReadFromJsonAsync<Microsoft.AspNetCore.Mvc.ProblemDetails>();
                _errorMessage = problemDetails?.Detail ?? Localizer["TwoFactor_Setup_InvalidCode"];
            }
        }
        catch (Exception)
        {
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _isVerifying = false;
            StateHasChanged();
        }
    }

    private async Task DownloadRecoveryCodes()
    {
        // This would require JS interop to trigger a download
        // For now, user can copy the codes manually
    }

    private void FinishSetup()
    {
        NavigationManager.NavigateTo("/account/settings");
    }

    public class VerifyModel
    {
        [Required(ErrorMessage = "Verification code is required")]
        [StringLength(6, MinimumLength = 6, ErrorMessage = "Code must be 6 digits")]
        [RegularExpression(@"^\d{6}$", ErrorMessage = "Code must be 6 digits")]
        public string Code { get; set; } = string.Empty;
    }
}
