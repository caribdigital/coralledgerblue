@page "/email-confirmation"
@using System.Net.Http.Json
@using CoralLedger.Blue.Web.Endpoints.Auth
@inject NavigationManager NavigationManager
@inject IHttpClientFactory HttpClientFactory
@inject IStringLocalizer<SharedResources> Localizer
@rendermode InteractiveServer

<PageTitle>@Localizer["EmailConfirmation_Title"] - CoralLedger Blue</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <div class="email-confirmation-icon">
                    <i class="bi bi-envelope-check"></i>
                </div>
                <h1>@Localizer["EmailConfirmation_Title"]</h1>
                <p class="auth-subtitle">@Localizer["EmailConfirmation_Subtitle"]</p>
            </div>

            @if (_resendSuccess)
            {
                <div class="alert alert-success" role="alert">
                    <i class="bi bi-check-circle-fill"></i>
                    @Localizer["EmailConfirmation_ResendSuccess"]
                </div>
            }

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    @_errorMessage
                </div>
            }

            <div class="email-confirmation-content">
                <p class="email-confirmation-message">
                    @Localizer["EmailConfirmation_Message"]
                </p>

                @if (!string.IsNullOrEmpty(Email))
                {
                    <p class="email-display">
                        <strong>@MaskEmail(Email)</strong>
                    </p>
                }

                <div class="email-confirmation-tips">
                    <p><i class="bi bi-info-circle"></i> @Localizer["EmailConfirmation_Tip1"]</p>
                    <p><i class="bi bi-clock"></i> @Localizer["EmailConfirmation_Tip2"]</p>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-outline-primary btn-block"
                        @onclick="HandleResend" disabled="@(_isResending || _resendCooldown > 0)">
                    @if (_isResending)
                    {
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        <span>@Localizer["EmailConfirmation_Resending"]...</span>
                    }
                    else if (_resendCooldown > 0)
                    {
                        <i class="bi bi-clock"></i>
                        <span>@Localizer["EmailConfirmation_ResendIn"] @_resendCooldown s</span>
                    }
                    else
                    {
                        <i class="bi bi-arrow-repeat"></i>
                        <span>@Localizer["EmailConfirmation_Resend"]</span>
                    }
                </button>
            </div>

            <div class="auth-footer">
                <p>
                    @Localizer["EmailConfirmation_AlreadyVerified"]
                    <a href="/login">@Localizer["EmailConfirmation_SignIn"]</a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _isResending = false;
    private bool _resendSuccess = false;
    private string? _errorMessage;
    private int _resendCooldown = 0;
    private System.Timers.Timer? _cooldownTimer;

    [SupplyParameterFromQuery]
    public string? Email { get; set; }

    protected override void OnInitialized()
    {
        // Decode email if URL encoded
        if (!string.IsNullOrEmpty(Email))
        {
            Email = Uri.UnescapeDataString(Email);
        }
    }

    private string MaskEmail(string email)
    {
        if (string.IsNullOrEmpty(email))
            return string.Empty;

        var parts = email.Split('@');
        if (parts.Length != 2)
            return email;

        var localPart = parts[0];
        var domain = parts[1];

        if (localPart.Length <= 2)
            return $"{localPart[0]}***@{domain}";

        return $"{localPart[0]}{new string('*', Math.Min(localPart.Length - 2, 5))}{localPart[^1]}@{domain}";
    }

    private async Task HandleResend()
    {
        if (string.IsNullOrEmpty(Email))
        {
            _errorMessage = "Email address is required to resend verification.";
            return;
        }

        _isResending = true;
        _resendSuccess = false;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress = new Uri(NavigationManager.BaseUri);

            var request = new SendVerificationEmailRequest(Email, null);
            var response = await httpClient.PostAsJsonAsync("/api/auth/send-verification-email", request);

            if (response.IsSuccessStatusCode)
            {
                _resendSuccess = true;
                StartCooldown();
            }
            else
            {
                // Generic message to prevent email enumeration
                _errorMessage = "Unable to send verification email. Please try again later.";
            }
        }
        catch (Exception)
        {
            _errorMessage = "An unexpected error occurred. Please try again later.";
        }
        finally
        {
            _isResending = false;
            StateHasChanged();
        }
    }

    private void StartCooldown()
    {
        _resendCooldown = 60; // 60 second cooldown
        _cooldownTimer?.Dispose();
        _cooldownTimer = new System.Timers.Timer(1000);
        _cooldownTimer.Elapsed += (sender, e) =>
        {
            _resendCooldown--;
            if (_resendCooldown <= 0)
            {
                _cooldownTimer?.Stop();
                _cooldownTimer?.Dispose();
            }
            InvokeAsync(StateHasChanged);
        };
        _cooldownTimer.Start();
    }

    public void Dispose()
    {
        _cooldownTimer?.Dispose();
    }
}
