@page "/verify-email"
@using System.Net.Http.Json
@using CoralLedger.Blue.Web.Endpoints.Auth
@inject NavigationManager NavigationManager
@inject IHttpClientFactory HttpClientFactory
@inject IStringLocalizer<SharedResources> Localizer
@rendermode InteractiveServer

<PageTitle>@Localizer["VerifyEmail_Title"] - CoralLedger Blue</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            @if (_isVerifying)
            {
                <div class="auth-header">
                    <div class="verification-icon verifying">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">@Localizer["VerifyEmail_Verifying"]</span>
                        </div>
                    </div>
                    <h1>@Localizer["VerifyEmail_Title"]</h1>
                    <p class="auth-subtitle">@Localizer["VerifyEmail_Verifying"]</p>
                </div>
            }
            else if (_isSuccess)
            {
                <div class="auth-header">
                    <div class="verification-icon success">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <h1>@Localizer["VerifyEmail_SuccessTitle"]</h1>
                    <p class="auth-subtitle">@Localizer["VerifyEmail_SuccessMessage"]</p>
                </div>

                <div class="verification-content">
                    <p>@Localizer["VerifyEmail_SuccessDescription"]</p>
                </div>

                <div class="form-actions">
                    <a href="/login" class="btn btn-primary btn-block">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>@Localizer["VerifyEmail_GoToLogin"]</span>
                    </a>
                </div>
            }
            else
            {
                <div class="auth-header">
                    <div class="verification-icon error">
                        <i class="bi bi-x-circle-fill"></i>
                    </div>
                    <h1>@Localizer["VerifyEmail_ErrorTitle"]</h1>
                    <p class="auth-subtitle">@_errorMessage</p>
                </div>

                <div class="verification-content">
                    <p>@Localizer["VerifyEmail_ErrorDescription"]</p>
                </div>

                <div class="form-actions">
                    <a href="/register" class="btn btn-outline-primary btn-block">
                        <i class="bi bi-person-plus"></i>
                        <span>@Localizer["VerifyEmail_RegisterAgain"]</span>
                    </a>
                    <a href="/login" class="btn btn-outline-secondary btn-block mt-2">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>@Localizer["VerifyEmail_BackToLogin"]</span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool _isVerifying = true;
    private bool _isSuccess = false;
    private string? _errorMessage;

    [SupplyParameterFromQuery]
    public string? Token { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (string.IsNullOrEmpty(Token))
        {
            _isVerifying = false;
            _errorMessage = Localizer["VerifyEmail_Error_NoToken"];
            return;
        }

        await VerifyEmailAsync();
    }

    private async Task VerifyEmailAsync()
    {
        try
        {
            var httpClient = HttpClientFactory.CreateClient();
            httpClient.BaseAddress = new Uri(NavigationManager.BaseUri);

            var request = new VerifyEmailRequest(Token!);
            var response = await httpClient.PostAsJsonAsync("/api/auth/verify-email", request);

            if (response.IsSuccessStatusCode)
            {
                _isSuccess = true;
            }
            else
            {
                var problemDetails = await response.Content.ReadFromJsonAsync<Microsoft.AspNetCore.Mvc.ProblemDetails>();
                _errorMessage = problemDetails?.Detail switch
                {
                    var d when d?.Contains("expired", StringComparison.OrdinalIgnoreCase) == true
                        => Localizer["VerifyEmail_Error_Expired"],
                    var d when d?.Contains("used", StringComparison.OrdinalIgnoreCase) == true
                        => Localizer["VerifyEmail_Error_AlreadyUsed"],
                    var d when d?.Contains("invalid", StringComparison.OrdinalIgnoreCase) == true
                        => Localizer["VerifyEmail_Error_Invalid"],
                    _ => Localizer["VerifyEmail_Error_Generic"]
                };
            }
        }
        catch (Exception)
        {
            _errorMessage = Localizer["VerifyEmail_Error_Generic"];
        }
        finally
        {
            _isVerifying = false;
            StateHasChanged();
        }
    }
}
