<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#00bcd4" />
    <meta name="description" content="Marine Intelligence Platform for the Bahamas Blue Economy - Track MPAs, coral bleaching, and fishing activity" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="CoralLedger" />

    <!-- PWA Manifest -->
    <link rel="manifest" href="manifest.json" />

    <!-- Apple Touch Icons -->
    <link rel="apple-touch-icon" href="images/icons/icon-152x152.png" />

    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons (using cdnjs - more reliable with tracking prevention) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.3/font/bootstrap-icons.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Radzen Blazor CSS -->
    <link rel="stylesheet" href="_content/Radzen.Blazor/css/material-dark-base.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Fonts with display=swap for non-blocking load -->
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;700&display=swap" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;700&display=swap"
        rel="stylesheet" media="print" onload="this.media='all'" />
    <!-- Material Icons with non-blocking load -->
    <link rel="preload" as="style" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" media="print" onload="this.media='all'" />
    <!-- Leaflet CSS (preload for performance) -->
    <link rel="preload" href="lib/leaflet/leaflet.css" as="style" />
    <link rel="stylesheet" href="lib/leaflet/leaflet.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="css/toast.css" />
    <link rel="stylesheet" href="CoralLedger.Blue.Web.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <!-- Loading skeleton shown until Blazor renders -->
    <div id="app-loading" style="display:flex;justify-content:center;align-items:center;height:100vh;background:#1a1a2e;">
        <div style="text-align:center;color:#00bcd4;">
            <div style="width:50px;height:50px;border:4px solid #00bcd4;border-top-color:transparent;border-radius:50%;animation:spin 1s linear infinite;margin:0 auto 16px;"></div>
            <div style="font-family:system-ui;font-size:14px;">Loading CoralLedger Blue...</div>
        </div>
        <style>@@keyframes spin{to{transform:rotate(360deg)}}</style>
    </div>
    <script>
        // Hide loading skeleton once Blazor is ready
        document.addEventListener('DOMContentLoaded', () => {
            const observer = new MutationObserver(() => {
                // Check for Blazor-rendered content (nav, main layout elements)
                if (document.querySelector('nav, .sidebar, .main-content, .dashboard-page, .map-page')) {
                    document.getElementById('app-loading')?.remove();
                    observer.disconnect();
                }
            });
            observer.observe(document.body, { childList: true, subtree: true });
            // Fallback: hide after 10 seconds regardless
            setTimeout(() => document.getElementById('app-loading')?.remove(), 10000);
        });
    </script>
    <!-- Radzen Component Providers -->
    <RadzenComponents />
    <Routes @rendermode="InteractiveAuto" />
    <!-- Theme Manager (must load before Blazor) -->
    <script src="js/theme.js"></script>
    <!-- Localization Helper -->
    <script src="js/localization.js"></script>
    <!-- Connection monitoring for offline support -->
    <script src="js/connection-monitor.js" defer></script>
    <!-- Cache management for PWA -->
    <script src="js/cache-manager.js" defer></script>
    <!-- Push notifications -->
    <script src="js/push-notifications.js" defer></script>
    <!-- Lazy loading utilities (loaded synchronously for map button to work) -->
    <script src="js/lazy-map.js"></script>
    <!-- Leaflet JS (loaded synchronously - required before Blazor map components) -->
    <script src="lib/leaflet/leaflet.js"></script>
    <!-- Tile cache manager for offline maps -->
    <script src="js/tile-cache.js"></script>
    <!-- Leaflet Map Interop (loaded synchronously - required before Blazor map components) -->
    <script src="js/leaflet-map.js"></script>
    <!-- Observation location picker -->
    <script src="js/observation-map.js" defer></script>
    <!-- Map time-lapse visualization -->
    <script src="js/map-timelapse.js" defer></script>
    <!-- Mobile utilities (gestures, pull-to-refresh, etc.) -->
    <script src="js/mobile.js" defer></script>
    <script src="_framework/blazor.web.js"></script>
    <!-- Radzen Blazor JS -->
    <script src="_content/Radzen.Blazor/Radzen.Blazor.js"></script>

    <!-- Service Worker Registration -->
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => {
                        console.log('SW registered:', registration.scope);
                    })
                    .catch(error => {
                        console.log('SW registration failed:', error);
                    });
            });
        }
    </script>
</body>

</html>
