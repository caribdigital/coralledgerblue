@inject IStringLocalizer<SharedResources> Localizer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CoralLedger Blue</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                <span class="bi bi-speedometer2" aria-hidden="true"></span> @Localizer["Nav_Dashboard"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="map">
                <span class="bi bi-map-fill" aria-hidden="true"></span> @Localizer["Nav_Map"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bleaching">
                <span class="bi bi-thermometer-half" aria-hidden="true"></span> @Localizer["Nav_Bleaching"]
            </NavLink>
        </div>
    </nav>
</div>
