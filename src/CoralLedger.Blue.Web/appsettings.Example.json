{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  // ============================================================
  // OAuth2 External Authentication Configuration
  // ============================================================
  // For production: Use environment variables or Azure Key Vault
  // For development: Use dotnet user-secrets (see OAUTH2-CONFIGURATION.md)
  // DO NOT commit real credentials to source control!
  "Authentication": {
    "Google": {
      // Google OAuth 2.0 credentials from https://console.cloud.google.com/
      "ClientId": "",  // e.g., "123456789-abc.apps.googleusercontent.com"
      "ClientSecret": ""  // e.g., "GOCSPX-..."
    },
    "Microsoft": {
      // Microsoft Azure AD app registration from https://portal.azure.com/
      "ClientId": "",  // e.g., "12345678-1234-1234-1234-123456789012"
      "ClientSecret": ""  // e.g., "abc~..."
    }
  },
  
  // JWT Configuration (required for authentication)
  "Jwt": {
    "Secret": "",  // Generate with: openssl rand -base64 32
    "Issuer": "CoralLedger.Blue",
    "Audience": "CoralLedger.Blue.Web"
  },
  
  // Security Configuration
  "Security": {
    "AllowedOrigins": "https://localhost:5001"  // CORS whitelist (comma-separated)
  },
  
  // External API Integrations
  "GlobalFishingWatch": {
    "Enabled": false
  },
  "CoralReefWatch": {
    "UseMockData": true,
    "MockDataPath": "data/mock-bleaching-data.json"
  },
  
  // Redis Cache Configuration
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "CoralLedger:",
    "Enabled": true,
    "MpaGeoJsonCacheTtlHours": 6,
    "NoaaBleachingCacheTtlHours": 12
  }
}
