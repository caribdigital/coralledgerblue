@code {
    private string _connectionStatus = "Connecting...";
    private string _connectionClass = "";
    private List<AlertDto> _alerts = new();
    private List<VesselDto> _vessels = new();
    private DashboardStats _stats = new();
    private int _unacknowledgedCount = 0;
    // Future SignalR hub connection for real-time updates
#pragma warning disable CS0649
    private IJSObjectReference? _hubConnection;
#pragma warning restore CS0649
    private System.Threading.Timer? _refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadInitialData();
        await ConnectToHub();
        StartRefreshTimer();
    }

    private async Task LoadInitialData()
    {
        try
        {
            // Load alerts
            var alertsResponse = await Http.GetFromJsonAsync<AlertsResponse>("/api/alerts?limit=20");
            if (alertsResponse != null)
            {
                _alerts = alertsResponse.ToList();
                _unacknowledgedCount = _alerts.Count(a => !a.IsAcknowledged);
            }

            // Load vessels
            var vesselsResponse = await Http.GetFromJsonAsync<VesselsResponse>("/api/ais/vessels");
            if (vesselsResponse?.Vessels != null)
            {
                _vessels = vesselsResponse.Vessels.ToList();
            }

            // Calculate stats
            _stats = new DashboardStats
            {
                BleachingAlerts = _alerts.Count(a => a.Type == "Bleaching"),
                FishingAlerts = _alerts.Count(a => a.Type == "FishingActivity"),
                VesselAlerts = _alerts.Count(a => a.Type == "VesselInMPA"),
                Observations = _alerts.Count(a => a.Type == "CitizenObservation")
            };
        }
        catch
        {
            // Use empty data on error
        }
    }

    private async Task ConnectToHub()
    {
        try
        {
            // Note: In WASM, we'd use Microsoft.AspNetCore.SignalR.Client
            // For now, mark as connected with polling
            _connectionStatus = "Connected";
            _connectionClass = "connected";
        }
        catch
        {
            _connectionStatus = "Disconnected";
            _connectionClass = "disconnected";
        }
    }

    private void StartRefreshTimer()
    {
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await LoadInitialData();
                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(30), TimeSpan.FromSeconds(30));
    }

    private async Task AcknowledgeAlert(Guid alertId)
    {
        try
        {
            var response = await Http.PostAsJsonAsync($"/api/alerts/{alertId}/acknowledge", new { acknowledgedBy = "Dashboard User" });
            if (response.IsSuccessStatusCode)
            {
                var alert = _alerts.FirstOrDefault(a => a.Id == alertId);
                if (alert != null)
                {
                    alert.IsAcknowledged = true;
                    _unacknowledgedCount = _alerts.Count(a => !a.IsAcknowledged);
                    StateHasChanged();
                }
            }
        }
        catch { }
    }

    private void OnAlertClick(AlertDto alert)
    {
        // Could navigate to alert details or show modal
    }

    private string GetAlertClass(string severity) => severity?.ToLower() switch
    {
        "critical" => "critical",
        "high" => "high",
        "medium" => "medium",
        "low" => "low",
        _ => "info"
    };

    private string GetAlertIcon(string type) => type switch
    {
        "Bleaching" => "bi-thermometer-sun",
        "FishingActivity" => "bi-tsunami",
        "VesselInMPA" => "bi-geo-alt-fill",
        "VesselDarkEvent" => "bi-broadcast",
        "CitizenObservation" => "bi-eye-fill",
        _ => "bi-bell-fill"
    };

    private string GetVesselTypeClass(string? type) => type?.ToLower() switch
    {
        "fishing" => "fishing",
        "cargo" => "cargo",
        "pleasure" => "pleasure",
        "tanker" => "tanker",
        _ => "cargo"
    };

    private string FormatTime(DateTime time)
    {
        var diff = DateTime.UtcNow - time;
        if (diff.TotalMinutes < 1) return "Just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes}m ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours}h ago";
        return time.ToString("MMM d");
    }

    public async ValueTask DisposeAsync()
    {
        _refreshTimer?.Dispose();
        if (_hubConnection != null)
        {
            await _hubConnection.DisposeAsync();
        }
    }

    private class AlertDto
    {
        public Guid Id { get; set; }
        public string Type { get; set; } = "";
        public string Severity { get; set; } = "";
        public string Title { get; set; } = "";
        public string? MpaName { get; set; }
        public bool IsAcknowledged { get; set; }
        public DateTime CreatedAt { get; set; }
    }

    private class AlertsResponse : List<AlertDto> { }

    private class VesselDto
    {
        public string Mmsi { get; set; } = "";
        public string Name { get; set; } = "";
        public double? Speed { get; set; }
        public string? VesselType { get; set; }
        public string? Flag { get; set; }
    }

    private class VesselsResponse
    {
        public IEnumerable<VesselDto>? Vessels { get; set; }
    }

    private class DashboardStats
    {
        public int BleachingAlerts { get; set; }
        public int FishingAlerts { get; set; }
        public int VesselAlerts { get; set; }
        public int Observations { get; set; }
    }
}
