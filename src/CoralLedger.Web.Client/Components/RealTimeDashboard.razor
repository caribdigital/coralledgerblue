@inject HttpClient Http
@inject IJSRuntime JS
@implements IAsyncDisposable

<div class="realtime-dashboard">
    <div class="dashboard-header">
        <h4><i class="bi bi-broadcast"></i> Real-Time Monitoring</h4>
        <div class="connection-status @_connectionClass">
            <span class="status-dot"></span>
            @_connectionStatus
        </div>
    </div>

    <div class="dashboard-grid">
        <!-- Alert Feed -->
        <div class="dashboard-card alert-feed">
            <div class="card-header">
                <h5><i class="bi bi-bell-fill"></i> Live Alerts</h5>
                <span class="badge bg-danger">@_unacknowledgedCount</span>
            </div>
            <div class="alert-list">
                @if (_alerts.Count == 0)
                {
                    <div class="empty-state">
                        <i class="bi bi-check-circle"></i>
                        <p>No active alerts</p>
                    </div>
                }
                else
                {
                    @foreach (var alert in _alerts.Take(10))
                    {
                        <div class="alert-item @GetAlertClass(alert.Severity)" @onclick="() => OnAlertClick(alert)">
                            <div class="alert-icon">
                                <i class="bi @GetAlertIcon(alert.Type)"></i>
                            </div>
                            <div class="alert-content">
                                <div class="alert-title">@alert.Title</div>
                                <div class="alert-meta">
                                    <span class="alert-time">@FormatTime(alert.CreatedAt)</span>
                                    @if (!string.IsNullOrEmpty(alert.MpaName))
                                    {
                                        <span class="alert-location">@alert.MpaName</span>
                                    }
                                </div>
                            </div>
                            @if (!alert.IsAcknowledged)
                            {
                                <button class="btn btn-sm btn-outline-secondary" @onclick:stopPropagation @onclick="() => AcknowledgeAlert(alert.Id)">
                                    <i class="bi bi-check"></i>
                                </button>
                            }
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="dashboard-card stats-card">
            <div class="stat-item">
                <div class="stat-icon bleaching"><i class="bi bi-thermometer-sun"></i></div>
                <div class="stat-info">
                    <div class="stat-value">@_stats.BleachingAlerts</div>
                    <div class="stat-label">Bleaching Alerts</div>
                </div>
            </div>
            <div class="stat-item">
                <div class="stat-icon fishing"><i class="bi bi-tsunami"></i></div>
                <div class="stat-info">
                    <div class="stat-value">@_stats.FishingAlerts</div>
                    <div class="stat-label">Fishing Activity</div>
                </div>
            </div>
            <div class="stat-item">
                <div class="stat-icon vessel"><i class="bi bi-geo-alt"></i></div>
                <div class="stat-info">
                    <div class="stat-value">@_stats.VesselAlerts</div>
                    <div class="stat-label">Vessel Intrusions</div>
                </div>
            </div>
            <div class="stat-item">
                <div class="stat-icon observations"><i class="bi bi-eye"></i></div>
                <div class="stat-info">
                    <div class="stat-value">@_stats.Observations</div>
                    <div class="stat-label">Observations (24h)</div>
                </div>
            </div>
        </div>

        <!-- Active Vessels -->
        <div class="dashboard-card vessel-card">
            <div class="card-header">
                <h5><i class="bi bi-cursor-fill"></i> Active Vessels</h5>
                <span class="badge bg-info">@_vessels.Count</span>
            </div>
            <div class="vessel-list">
                @foreach (var vessel in _vessels.Take(5))
                {
                    <div class="vessel-item">
                        <div class="vessel-icon @GetVesselTypeClass(vessel.VesselType)">
                            <i class="bi bi-cursor-fill"></i>
                        </div>
                        <div class="vessel-info">
                            <div class="vessel-name">@vessel.Name</div>
                            <div class="vessel-meta">
                                @vessel.VesselType â€¢ @(vessel.Speed?.ToString("F1") ?? "0") kts
                            </div>
                        </div>
                        <div class="vessel-flag">@vessel.Flag</div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

